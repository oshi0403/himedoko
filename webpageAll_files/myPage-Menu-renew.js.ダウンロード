jQuery(document).ready(function() {  
	// スクロールボタン
	var topBtn = $('#pageTop');
	topBtn.hide();
	$(window).scroll(function () {
		if ($(this).scrollTop() > 100) {
			topBtn.fadeIn();
		} else {
			topBtn.fadeOut();
		}
	});
	topBtn.click(function () {
		$('body,html').animate({
		scrollTop: 1
		}, 500);
		return false;
	});
});